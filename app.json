{
  "name": "Man",
  "description": "Templates rendering as a service.",
  "keywords": [
    "reports",
    "templates",
    "email",
    "sms",
    "rendering"
  ],
  "website": "http://docs.man2.apiary.io/",
  "repository": "https://github.com/nebo15/man.api",
  "success_url": "/templates",
  "env": {
    "HOST": {
      "description": "HTTP host for web app to listen on.",
      "value": "my-man-api.herokuapp.com"
    },
    "DB_MIGRATE": {
      "description": "Migrate database when container starts.",
      "value": "true"
    },
    "SECRET_KEY": {
      "description": "Phoenix [`:secret_key_base`](https://hexdocs.pm/phoenix/Phoenix.Endpoint.html).",
      "generator": "secret"
    },
    "ERLANG_COOKIE": {
      "description": "Erlang distribution cookie.",
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "Standard-1X"
    }
  },
  "buildpacks": [
    {
      "url": "https://github.com/HashNuke/heroku-buildpack-elixir.git"
    }
  ],
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "9.5"
      }
    }
  ]
}
